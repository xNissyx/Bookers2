<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_image %>
      <table class="table mb-3">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>

        <%= link_to edit_user_path(current_user.id),class:"row pt-4 pb-3" do %>
          <button type="button" class="btn btn-outline-secondary btn-block"><i class="fas fa-user-cog"></i></button>
        <% end %>

      <h2>New book</h2>

      <%= form_with model: Book.new do |f| %>

        <div class="form-group mb-0">
        <label for="inputTitle" class="form-label">Title</label><br>
        <%= f.text_field :title, autofocus: true, id: "inputTitle", class: "btn-block form-control" %><br>
        </div>
        <div class="mt-0">
        <label for="inputOpinion" class="form-label">Opinion</label><br>
        <%= f.text_area :body, id: "inputOpinion", class: "btn-block form-control" %>
        </div>
        <%= f.submit "Create Book", class: "btn btn-success mt-3" %>

      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_image, size: "80x80" %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>