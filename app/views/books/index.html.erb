<div class="container px-0">
  <div class="row">

    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag "default-image.jpg" %>
      <table class="table mb-3">
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
      </table>

        <%= link_to edit_user_path(@user.id),class:"row pt-4 pb-3" do %>
          <button type="button" class="btn btn-outline-secondary btn-block"><i class="fas fa-user-cog"></i></button>
        <% end %>

      <h2>New book</h2>

      <%= form_with model: @book do |f| %>

        <div class="form-group mb-0">
        <label for="inputTitle" class="form-label">Title</label><br>
        <%= f.text_field :title, autofocus: true, id: "inputTitle", class: "btn-block form-control" %><br>
        </div>
        <div class="mt-0">
        <label for="inputOpinion" class="form-label">Opinion</label><br>
        <%= f.text_area :body, id: "inputOpinion", class: "btn-block form-control" %>
        </div>
        <%= f.submit "create book", class: "btn btn-success mt-3" %>

      <% end %>
    </div>

    <div class="col offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th class="colspan-5"></th>
        </tr>

        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user_id) do %>
                <%= image_tag "default-image.jpg", size: "80x80" %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
  </div>
</div>