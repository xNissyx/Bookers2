<div class="container">
  
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h1>Editing Book</h1>
      <div class="errors">
        <% if @book.errors.any? %>
          <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li>
                  <%= message %>
                </li>
              <% end %>
            </ul>
        <% end %>
      </div>
      <%= form_with model: @book do |f| %>

        <label for="inputTitle">Title</label><br>
        <%= f.text_field :title, autofocus: true, id:"inputTitle", class:"btn-block form-control" %><br>

        <label for="inputBody">Opinion</label><br>
        <%= f.text_area :body, id:"inputBody", class:"btn-block form-control" %><br>

        <%= f.submit "Update Book", class: "btn btn-success mb-3" %>

      <% end %>

    
    <%= link_to "Show", book_path(@book.id) %>
    |
    <%= link_to "Back", books_path %>
    <!--<a href="">back</a>-->
    </div>
  </div>
</div>