<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render "partial", user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@book.user_id) do %>
              <%= image_tag @user.get_image, size: "100x100" %><br>
              <%= @user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td>
              <%= link_to edit_book_path(@book.id) do %>
                <button type="button" class="btn btn-sm btn-success">Edit</button>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか？"} do %>
                <button type="button" class="btn btn-sm btn-danger">Destroy</button>
              <% end %>
            </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>