<div class="container">
  <div class="row">

    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag "default-image.jpg" %>
      <table class="table mb-3">
        <tr>
          <th>name</th>
          <th><%= @book.user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @book.user.introduction %></th>
        </tr>
      </table>

        <%= link_to edit_user_path(@user.id),class:"row pt-4 pb-3" do %>
          <button type="button" class="btn btn-outline-secondary btn-block"><i class="fas fa-user-cog"></i></button>
        <% end %>

      <h2>New book</h2>

      <%= form_with model: Book.new do |f| %>

        <div class="form-group mb-0">
        <label for="inputTitle" class="form-label">Title</label><br>
        <%= f.text_field :title, autofocus: true, id: "inputTitle", class: "btn-block form-control" %><br>
        </div>
        <div class="mt-0">
        <label for="inputOpinion" class="form-label">Opinion</label><br>
        <%= f.text_area :body, id: "inputOpinion", class: "btn-block form-control" %>
        </div>
        <%= f.submit "create book", class: "btn btn-success mt-3" %>

      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@book.user_id) do %>
              <%= image_tag "default-image.jpg", size: "100x100" %><br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td>
              <%= link_to edit_book_path(@book.id) do %>
                <button type="button" class="btn btn-sm btn-success">Edit</button>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id), method: :delete do %>
                <button type="button" class="btn btn-sm btn-danger">Destroy</button>
              <% end %>
            </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>